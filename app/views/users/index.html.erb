<h1><%= User.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %> </th>
      <th><%= User.human_attribute_name(:self_introduction) %> </th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.self_introduction %></td>
        <td><%= link_to t('activerecord.attributes.links.show'), users_show_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

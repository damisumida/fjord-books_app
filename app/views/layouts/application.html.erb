<!DOCTYPE html>
<html>
  <head>
    <title><%= t('.title') %> </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <%= t('.logged_in_as', email: current_user.email) %>
        <%= link_to t('.edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link' %> |
        <%= link_to t('.users'), users_path %> |
        <%= link_to t('.books'), books_path %>
      <% else %>
        <%= link_to t('.sign_up'), new_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('.sign_in'), new_user_session_path, class: 'navbar-link' %>
      <% end %>
    </p>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>

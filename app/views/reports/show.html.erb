<h1>Report</h1>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Body Text:</strong>
  <%= @report.body_text %>
</p>
<% if @report.user_id == current_user.id %>
  <%= link_to 'Edit', edit_report_path(@report) %> |
<% end %>
<%= link_to 'Back', reports_path %>

<%= render 'comments/index', content: @report %>
<%= render 'comments/form', content: @report, comment: @comment %>
